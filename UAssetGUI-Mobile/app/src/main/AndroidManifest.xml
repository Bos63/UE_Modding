<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Paylaşılan depolama alanının içeriğini oku -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- Paylaşılan depolama alanımın içeriğini değiştir veya sil -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- Tüm dosyaları yönetme izni ver -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <!-- Tam ağ erişimine sahip olma -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_uassetgui_logo"
        android:label="UAssetGUI"
        android:roundIcon="@drawable/ic_uassetgui_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.UAssetGUI">
        <activity
            android:name=".ui.editor.EditorActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
